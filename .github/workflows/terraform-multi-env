name: Terraform Multi-Env Init Validate Plan

on:
  push:
    branches:
      - main
      - my-branch
  pull_request:
    branches:
      - main

jobs:
  terraform:
    name: Terraform (${{ matrix.environment }})
    runs-on: ubuntu-latest

    # Run once per environment
    strategy:
      matrix:
        environment: [sandbox, dev, qa, prod]

    env:
      TF_REGION: us-east-1
      TF_WORKING_DIR: modules/tf-module-example

    permissions:
      id-token: write   # required for OIDC
      contents: read    # required to checkout the repo

    defaults:
      run:
        working-directory: ${{ env.TF_WORKING_DIR }}

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      # Map each environment to its own AWS IAM role
      - name: Configure AWS credentials via OIDC (${{ matrix.environment }})
        uses: aws-actions/configure-aws-credentials@v4
        with:
          role-to-assume: ${{ matrix.environment == 'sandbox' && 'arn:aws:iam::288761763536:role/GithubActionsRole-SANDBOX' ||
                             matrix.environment == 'dev'     && 'arn:aws:iam::288761763536:role/GithubActionsRole-DEV'     ||
                             matrix.environment == 'qa'      && 'arn:aws:iam::288761763536:role/GithubActionsRole-QA'      ||
                             matrix.environment == 'prod'    && 'arn:aws:iam::288761763536:role/GithubActionsRole-PROD'    ||
                             'arn:aws:iam::288761763536:role/GithubActionsRole-DEV' }}
          role-session-name: github-actions-${{ matrix.environment }}
          aws-region: ${{ env.TF_REGION }}

      - name: Set up Terraform
        uses: hashicorp/setup-terraform@v3
        with:
          terraform_version: 1.5.7

      - name: Terraform fmt (${{ matrix.environment }})
        run: terraform fmt -check

      - name: Terraform init (${{ matrix.environment }})
        run: terraform init -input=false

      - name: Terraform validate (${{ matrix.environment }})
        run: terraform validate -no-color

      - name: Terraform plan (${{ matrix.environment }})
        run: terraform plan -input=false -no-color -var "environment=${{ matrix.environment }}"
